{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "outDir": "./app/static/js/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/@types/"]
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["node_modules", "dist", "lib"]
}
